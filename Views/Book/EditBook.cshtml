@model BookModel

<div class="container">
    <h3>Edit Book</h3>

    <form method="post" asp-action="EditBook" asp-controller="Book">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" value=@Model.Title />
        </div>
        <div class="form-group">
            <label asp-for="AuthorId"></label>
            <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.Author">
                <option value="">Please choose the author</option>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>