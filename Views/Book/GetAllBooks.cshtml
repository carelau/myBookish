@model List<BookModel>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)

        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td><a asp-controller="Book" asp-action="EditBook" asp-route-id="@book.Id"> Edit </a> <a href="#"> Delete
                    </a> <a href="#"> Add
                        Copy </a> </td>
            </tr>

        }
    </tbody>
</table>
